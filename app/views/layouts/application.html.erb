<!DOCTYPE html>
<html>
<head>
  <title>BurningScaff</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,700|Hind:400,600|Asap|Cantarell|Droid+Sans+Mono|Sintony:400,700' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Martel+Sans:900,600,800' rel='stylesheet' type='text/css'>
</head>
<body>

<header>
<nav class=navigation>
  <% if @current_user %>
  <%= link_to "All Planes", airplanes_path %>
  <%= link_to "Create Plane", new_airplane_path %>
  <%= link_to "All Flights", flights_path %>
  <%= link_to "Create Flights", new_flight_path %>
  <%= link_to "Search Flights", search_path %>
  <%= link_to "Logout", logout_path, :method => :delete%>
  <% else %>
  <%= link_to "Sign up", users_new_path %>
  <%= link_to "Login", login_path %>
  <% end %>
</nav></header>


<%= yield %>



</body>
</html>
