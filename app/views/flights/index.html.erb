<p id="notice"><%= notice %></p>

<h1>All Flights</h1>

<table>
  <thead>
    <tr>
      <th colspan="1">Departure Date</th>
      <th colspan="1">Flight Number</th>
      <th colspan="1">Origin</th>
      <th colspan="1">Destination</th>
      <th colspan="1">Plane</th>
      <th colspan="1">Seats</th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.departure_date %></td>
        <td><%= link_to(flight.flight_number) %></td>
        <td><%= flight.origin %></td>
        <td><%= flight.destination %></td>

        <td><%= @airplanes.find(flight.airplane_id).plane_model %></td>
        <%#= raise %>
        <td><%= @airplanes.find(flight.airplane_id).rows * @airplanes.find(flight.airplane_id).columns %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

